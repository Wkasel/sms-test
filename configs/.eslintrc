{
  "extends": ["airbnb"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["monorepo", "prettier"],
  "rules": {
    "monorepo/no-internal-import": "error",
    "monorepo/no-relative-import": "error",
    "prettier/prettier": "error"
  }
}
